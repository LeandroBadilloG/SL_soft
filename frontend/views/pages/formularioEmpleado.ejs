    <div class="container my-4">
        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#registroEmpleado"
            aria-expanded="false" aria-controls="registroEmpleado">
            Registrar Vendedor
        </button>
        <div class="mt-3">
            <div class="collapse" id="registroEmpleado">
                <div class="card card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <h1 class="text-center mt-4">Registro de Empleado</h1>
                            <form class="m-5" action="/v1/registrarEmpleado" method="post">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group ">
                                            <label for="nombre" class="form-label mt-2">NOMBRE</label>
                                            <input type="text" class="form-control" name="nombre" required
                                                placeholder="Juan Camilo">
                                            <label for="apellido" class="form-label mt-2">APELLIDO</label>
                                            <input type="text" class="form-control" name="apellido" required
                                                placeholder="Martinez Mora">
                                            <label for="documento" class="form-label mt-2">DOCUMENTO</label>
                                            <input type="number" class="form-control" name="documento" required>
                                            <div class="row mt-2">
                                                <label class="form-label">ESTADO</label>
                                                <div class="form-check col-md-3 mx-3">
                                                    <input class="form-check-input" type="radio" name="estado" id="activo" value="true">
                                                    <label class="form-check-label" for="activo">Activo</label>
                                                </div>
                                                <div class="form-check col-md-3">
                                                    <input class="form-check-input" type="radio" name="estado" id="inactivo" value="false">
                                                    <label class="form-check-label" for="inactivo">Inactivo</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group ">
                                            <label for="cargo" class="form-label mt-2">CARGO</label>
                                            <input type="text" class="form-control" name="cargo" required>
                                            <label for="email" class="form-label mt-2">CORREO</label>
                                            <input type="email" class="form-control" name="email" required>
                                            <label for="password" class="form-label mt-2">CONTRASEÃ‘A</label>
                                            <input type="password" class="form-control" name="password" required>
                                            <input type="text" name="rol" value="Empleado" hidden>
                                        </div>
                                    </div>
                                    <div class="form-group text-center ">
                                        <input type="submit" class="btn btn-primary px-5 mt-5 " value="Registrar">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 border mx-2">
                <div class="card-header ">
                    <h4 class="text-center">EMPLEADOS</h4>
                </div>
                <div class="card-body">
                    <table id="table_id" class="display table table-bordered " style="width:100%">
                        <thead>
                            <tr>
                                <th scope="col">Nombre</th>
                                <th scope="col">Cargo</th>
                                <th scope="col">opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%empleados.forEach ( function ( elemento ) {%>
                                <tr>
                                    <td>
                                        <%=elemento.nombre%>
                                    </td>
                                    <td>
                                        <%=elemento.cargo%>
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal"
                                            data-bs-target="#modalEliminar"
                                            onclick="eliminarUsuario(`<%=elemento._id%>`,`<%=elemento.nombreUsuario%>`)">Eliminar</button>
                                        <button type="button" class="btn btn-outline-success" data-bs-toggle="modal"
                                            data-bs-target="#modalActualizarUsuario"
                                            onclick="llamarDatosUsuario(`<%=elemento.nombreUsuario%>`,`<%=elemento.apellidosUsuario%>`,`<%=elemento.telefonoUsuario%>`,`<%=elemento.correoUsuario%>`,`<%=elemento.ubicacionUsuario%>`,`<%=elemento.documentoUsuario%>`,`<%=elemento._id%>`)">Editar</button>
                                    </td>
                                </tr>
                                <%})%>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-md-5 border mx-2">
                <div class="card-header ">
                    <h4 class="text-center"></h4>
                </div>

            </div>
        </div>
    </div>
